@model IEnumerable<IBlog.Models.Makale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:23px;">Makaleler</h2>

<p>
    @Html.ActionLink("Makale Yaz", "Create", null, new { @class = "btn btn-success ml-4" })
</p>
<table class="table ml-2" style="font-size:1.5rem;" id="dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OlusturulmaTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yazar)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OlusturulmaTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yazar)
            </td>
            <td class="pr-4">
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-block w-50 ml-5" })
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-secondary btn-block w-50 ml-5" })
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-block w-50 ml-5" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
        //$("#dataTable").dataTable();
    </script>
}
